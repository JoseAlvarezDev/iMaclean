{
  "name": "imaclean",
  "version": "2.0.0",
  "description": "El asistente de limpieza inteligente y seguro para tu Mac",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "author": {
    "name": "JoseAlvarezDev",
    "email": "contact@josealvarezdev.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.josealvarezdev.imaclean",
    "productName": "iMaclean",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/icons/logo_light.png",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true
    },
    "win": {
      "icon": "public/icons/logo_light.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "public/icons/logo_light.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "dmg": {
      "title": "iMaclean",
      "background": "public/icons/logo_light.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "framer-motion": "^11.18.2",
    "i18next": "^24.2.2",
    "lucide-react": "^0.469.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.4.1",
    "react-router-dom": "^7.6.1",
    "recharts": "^2.15.3",
    "vite-plugin-pwa": "^1.0.1",
    "workbox-window": "^7.3.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.2.1",
    "electron": "^34.5.8",
    "electron-builder": "^25.1.8",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-compiler": "^19.1.0-rc.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.2.7",
    "wait-on": "^8.0.5"
  }
}